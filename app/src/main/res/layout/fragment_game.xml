<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/homeTeamName"
            style="@style/TeamTitle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:singleLine="true"
            tools:text="Winners"
            app:layout_constraintEnd_toStartOf="@+id/textView"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginBottom="@dimen/text_margin"
            android:fontFamily="sans-serif-light"
            android:text="@string/versus"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/awayTeamName"
            app:layout_constraintTop_toTopOf="@+id/homeTeamName"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView"/>

        <TextView
            android:id="@+id/awayTeamName"
            style="@style/TeamTitle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:singleLine="true"
            tools:text="Really long name"
            app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginStart="8dp"/>


        <TextView
            android:id="@+id/homeTeamScore"
            style="@style/TeamScoreBold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/homeTeamName"
            app:layout_constraintStart_toStartOf="@+id/homeTeamName"
            app:layout_constraintTop_toBottomOf="@+id/homeTeamName"
            tools:text="32" />


        <TextView
            android:id="@+id/awayTeamScore"
            style="@style/TeamScoreBold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/awayTeamName"
            app:layout_constraintStart_toStartOf="@+id/awayTeamName"
            app:layout_constraintTop_toBottomOf="@+id/awayTeamName"
            tools:text="26" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>